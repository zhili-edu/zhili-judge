{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2022",
    "lib": ["es2015", "es2016", "es2021", "dom"],
    "strictNullChecks": true
  }
}
